#include<iostream>
#include<cmath>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int a[n][n],i,j;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            cin>>a[i][j];
        }
    }
    
    double sum_a=0,sum_b=0,result,sa,sb,r;
        for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(i==j)
            {
                sum_a=sum_a + a[i][j];
            }
        }
    }
        for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {    
            if((i+j)==(n-1))
            sum_b=sum_b + a[i][j];
            
        }
    }

    result = sum_a - sum_b;
    result = abs(result);
    cout<< result;

    return 0;
}
